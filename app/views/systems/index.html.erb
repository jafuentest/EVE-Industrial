<h1>Listing Systems</h1>
<table class="table table-bordered table-striped tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Security</th>
      <th>EVE-Central ID</th>
      <th class="edit-field">Edit</th>
    </tr>
  </thead>
  
  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= link_to system.name, system %></td>
        <td><%= link_to system.region.name, system.region %></td>
        <td><%= '%.1f' % system.security %></td>
        <td><%= system.central_id %></td>
        <td class="edit-field">
          <%= link_to image_tag("/edit.png", :alt => "Edit"), edit_system_path(system) %>
          <%= link_to image_tag("/delete.png", :alt => "Delete"), system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

