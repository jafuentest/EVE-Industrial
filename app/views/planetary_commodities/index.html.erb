<h1>Planetary Commodities</h1>

<%= button_to 'Update Prices', update_prices_planetary_commodities_path, class: 'btn btn-outline-primary mt-2' %>

<table class="table table-striped table-bordered mt-4" data-toggle="table">
  <thead>
    <tr>
      <th data-sortable="true" data-sorter="nameSorter">Name</th>
      <th data-sortable="true">Tier</th>
      <th data-sortable="true" data-sorter="priceSorter">ISK / Volume (buy)</th>
      <th data-sortable="true" data-sorter="priceSorter">ISK / Volume (sell)</th>
      <th data-sortable="true" data-sorter="priceSorter">Buy Price</th>
      <th data-sortable="true" data-sorter="priceSorter">Sell Price</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @planetary_commodities.each do |planetary_commodity| %>
      <tr>
        <td><%= link_to planetary_commodity.name, planetary_commodity %></td>
        <td><%= planetary_commodity.tier %></td>
        <td><%= number_with_delimiter(planetary_commodity.buy_isk_per_volume.round(2)) %></td>
        <td><%= number_with_delimiter(planetary_commodity.sell_isk_per_volume.round(2)) %></td>
        <td><%= number_with_delimiter(planetary_commodity[:buy_price]) %></td>
        <td><%= number_with_delimiter(planetary_commodity[:sell_price]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= javascript_include_tag 'table-sorting' %>
