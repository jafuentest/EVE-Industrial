source 'https://rubygems.org'

gem 'rails', '3.2.13'

# For Heroku, more info at the following link
# https://devcenter.heroku.com/articles/ruby-support#injected-plugins
gem 'rails_12factor'

# Specification of ruby version
ruby '2.0.0'

# PostgreSQL
gem 'pg', '>=0.17.1'

# Libcurl bindings for Ruby
gem 'curb', '>=0.8.5'

# HTML, XML, SAX and Reader parser
gem 'nokogiri', '>=1.6.1'

group :development do
  # Automatically add model description to to the model.rb
  gem 'annotate', :github => 'ctran/annotate_models', :branch => 'develop'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

